rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow admins to read/write everything
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Payments collection - allow authenticated users to create, admins to read/write
    match /payments/{paymentId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Licenses collection - allow authenticated users to read their own, admins to read/write all
    match /licenses/{licenseId} {
      allow read: if request.auth != null && 
                     (request.auth.token.admin == true || 
                      resource.data.email == request.auth.token.email);
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Approvals collection - allow anyone to create approval requests, admins to read/write
    match /approvals/{approvalId} {
      allow create: if true; // Allow anyone to create approval requests
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // License Requests collection - allow anyone to create license requests from website
    match /license_requests/{requestId} {
      allow create: if true; // Allow anyone to submit license requests from the website
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
